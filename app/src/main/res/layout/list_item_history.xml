<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7F7F7"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/history_expression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#1F1F1F"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/history_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#6B6B6B"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/history_timestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#6B6B6B"
        android:textSize="14sp" />

    <Button
        android:id="@+id/history_edit_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_outline_edit_24"
        android:drawablePadding="8dp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#00BFFF"
        app:cornerRadius="@null"
        app:icon="@drawable/ic_outline_edit_24"
        app:iconTint="#000000" />

    <Button
        android:id="@+id/history_delete_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_outline_delete_forever_24"
        android:drawablePadding="8dp"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/design_default_color_error"
        app:cornerRadius="@null"
        app:icon="@drawable/ic_outline_delete_forever_24"
        app:iconTint="#000000" />


</LinearLayout>